<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# messages() %>

<main class="error-main">
  <div class="error-container">
    <div class="error-icon">
      <% if ((error && error.status) || status) { %>
        <% const errorCode = (error && error.status) || status || 500; %>
        <% if (errorCode === 404) { %>
