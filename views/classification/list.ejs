<%- include('../partials/header', { title }) %>

<h1><%= title %></h1>

<% if (!grid || grid.length === 0) { %>
  <p>No vehicles found in this category.</p>
<% } else { %>
  <div class="vehicle-grid">
    <% grid.forEach(vehicle => { %>
      <div class="vehicle-card">
        <!-- Use the vehicles folder for car images -->
        <img src="/images/vehicles/<%= vehicle.inv_image.replace('/images/vehicles/', '') %>" 
             alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" 
             class="vehicle-img" />

        <div class="vehicle-info">
          <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
          <p>Year: <%= vehicle.inv_year %></p>
          <p>Price: $<%= vehicle.inv_price.toLocaleString() %></p>
          <p>Miles: <%= vehicle.inv_miles.toLocaleString() %></p>
          <p>Color: <%= vehicle.inv_color %></p>
          <p><%= vehicle.inv_description %></p>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<%- include('../partials/footer') %>
