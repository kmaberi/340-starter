<% layout('layouts/layout') %>

<% if (errors && errors.length > 0) { %>
  <div class="errors">
    <% errors.forEach(error => { %>
      <p class="error"><%= error.msg %></p>
    <% }); %>
  </div>
<% } %>

<% if (message) { %>
  <div class="message">
    <%= message %>
  </div>
<% } %>

<h1><%= title %></h1>

<div class="review-form-container">
  <h2>Edit Your Review</h2>
  
  <div class="vehicle-info">
    <h3><%= review.inv_make %> <%= review.inv_model %></h3>
    <p><%= review.inv_year %></p>
  </div>

  <form action="/reviews/edit/<%= review.review_id %>" method="post" class="review-form" id="editReviewForm">
    
    <label for="review_title">Review Title:</label>
    <input type="text" id="review_title" name="review_title" maxlength="100" required
           value="<%= review.review_title %>"
           placeholder="Brief summary of your experience">
    
    <label for="review_rating">Rating:</label>
    <select id="review_rating" name="review_rating" required>
      <option value="">Select a rating</option>
      <option value="5" <%= review.review_rating == 5 ? 'selected' : '' %>>⭐⭐⭐⭐⭐ Excellent</option>
      <option value="4" <%= review.review_rating == 4 ? 'selected' : '' %>>⭐⭐⭐⭐ Very Good</option>
      <option value="3" <%= review.review_rating == 3 ? 'selected' : '' %>>⭐⭐⭐ Good</option>
      <option value="2" <%= review.review_rating == 2 ? 'selected' : '' %>>⭐⭐ Fair</option>
      <option value="1" <%= review.review_rating == 1 ? 'selected' : '' %>>⭐ Poor</option>
    </select>
    
    <label for="review_text">Your Review:</label>
    <textarea id="review_text" name="review_text" rows="6" maxlength="2000" required
              placeholder="Tell others about your experience with this vehicle..."><%= review.review_text %></textarea>
    <div class="char-count">
      <span id="charCount">0</span>/2000 characters
    </div>
    
    <div class="form-buttons">
      <button type="submit" class="btn btn-primary">Update Review</button>
      <a href="/reviews/my-reviews" class="btn btn-secondary">Cancel</a>
      <a href="/reviews/delete/<%= review.review_id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">Delete Review</a>
    </div>
  </form>
</div>

<script>
// Client-side validation and character counter
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('editReviewForm');
  const textarea = document.getElementById('review_text');
  const charCount = document.getElementById('charCount');
  const titleInput = document.getElementById('review_title');
  const ratingSelect = document.getElementById('review_rating');
  
  // Character counter for review text
  function updateCharCount() {
    const length = textarea.value.length;
    charCount.textContent = length;
    
    // Visual feedback for character limit
    if (length > 1800) {
      charCount.style.color = '#d73527';
    } else if (length > 1500) {
      charCount.style.color = '#f39c12';
    } else {
      charCount.style.color = '#666';
    }
  }
  
  textarea.addEventListener('input', updateCharCount);
  updateCharCount(); // Initialize count
  
  // Form validation
  form.addEventListener('submit', function(e) {
    const title = titleInput.value.trim();
    const text = textarea.value.trim();
    const rating = ratingSelect.value;
    
    let isValid = true;
    let errorMessage = '';
    
    // Validate title
    if (title.length < 5) {
      errorMessage += 'Review title must be at least 5 characters long.\n';
      isValid = false;
    }
    if (title.length > 100) {
      errorMessage += 'Review title must be no more than 100 characters.\n';
      isValid = false;
    }
    
    // Validate text
    if (text.length < 10) {
      errorMessage += 'Review text must be at least 10 characters long.\n';
      isValid = false;
    }
    if (text.length > 2000) {
      errorMessage += 'Review text must be no more than 2000 characters.\n';
      isValid = false;
    }
    
    // Validate rating
    if (!rating || rating < 1 || rating > 5) {
      errorMessage += 'Please select a rating between 1 and 5 stars.\n';
      isValid = false;
    }
    
    if (!isValid) {
      alert(errorMessage.trim());
      e.preventDefault();
      return false;
    }
  });
});
</script>

