<% layout('layouts/layout') %>

<% if (message) { %>
  <div class="message">
    <%= message %>
  </div>
<% } %>

<h1><%= title %></h1>

<div class="admin-reviews-container">
  <div class="admin-header">
    <h2>Review Moderation</h2>
    <p>Manage and moderate user-submitted vehicle reviews</p>
    <p class="pending-count">Pending Reviews: <strong><%= pendingReviews.length %></strong></p>
  </div>

  <% if (pendingReviews && pendingReviews.length > 0) { %>
    <div class="reviews-list">
      <% pendingReviews.forEach(review => { %>
        <div class="review-item pending">
          <div class="review-header">
            <div class="review-info">
              <h3><%= review.review_title %></h3>
              <div class="meta">
                <span class="vehicle"><%= review.inv_make %> <%= review.inv_model %> (<%= review.inv_year %>)</span>
                <span class="author">by <%= review.account_firstname %> <%= review.account_lastname %></span>
                <span class="date"><%= new Date(review.review_date).toLocaleDateString() %></span>
              </div>
            </div>
            <div class="rating">
              <% for(let i = 1; i <= 5; i++) { %>
                <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚≠ê</span>
              <% } %>
            </div>
          </div>
          
          <div class="review-content">
            <p><%= review.review_text %></p>
          </div>
          
          <div class="admin-actions">
            <form method="post" action="/reviews/admin/approve/<%= review.review_id %>" style="display: inline;">
              <button type="submit" class="btn btn-success">Approve</button>
            </form>
            <form method="post" action="/reviews/admin/reject/<%= review.review_id %>" style="display: inline;" 
                  onsubmit="return confirm('Are you sure you want to reject this review?')">
              <button type="submit" class="btn btn-danger">Reject</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="no-reviews">
      <h3>No Pending Reviews</h3>
      <p>All reviews have been moderated.</p>
    </div>
  <% } %>
</div>

