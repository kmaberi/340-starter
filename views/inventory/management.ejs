
<div class="inventory-management">
  <h1>Inventory Management</h1>

  <% if (message) { %>
    <div class="message"><%= Array.isArray(message) ? message.join(' ') : message %></div>
  <% } %>

  <section class="management-actions">
    <h2>Add New Items</h2>
    <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
    </ul>
  </section>

  <section class="manage-existing">
    <h2>Manage Existing Inventory</h2>
    <p>Choose a classification to see its vehicles and manage them.</p>
    
    <div class="classification-select">
      <label for="classificationList">Classification:</label>
      <%- classificationList %>
    </div>

    <table id="inventoryDisplay"></table>
    <noscript>
      <div class="notice">
        JavaScript must be enabled to use the inventory management features.
      </div>
    </noscript>
  </section>
</div>

<script src="/js/inventory.js"></script>
