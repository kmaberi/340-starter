
<main class="container">
  <h1>Add Classification</h1>

  <% if (message) { %>
    <div class="message"><%= Array.isArray(message) ? message.join(' ') : message %></div>
  <% } %>
  <% if (typeof errors !== 'undefined' && errors && errors.array && errors.array().length) { %>
    <div class="errors">
      <ul>
        <% errors.array().forEach(function(err){ %>
          <li><%= err.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <p>The new classification name cannot contain spaces or special characters.</p>

  <form method="post" action="/inv/add-classification">
    <fieldset>
      <legend>Classification Data</legend>

      <label for="classification_name">Classification Name</label>
      <input
        id="classification_name"
        name="classification_name"
        type="text"
        required
        pattern="^[A-Za-z0-9]+$"
        title="Letters and numbers only. No spaces or special characters."
        value="<%= classification_name || '' %>"
      >

      <button type="submit">Add Classification</button>
    </fieldset>
  </form>
</main>
