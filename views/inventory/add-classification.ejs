

<main class="container">
  <h1>Add Classification</h1>

  <% if (message) { %>
    <div class="message"><%= message %></div>
  <% } %>

  <form method="post" action="/inv/add-classification" novalidate>
    <label for="classification_name">Classification name (no spaces or special characters)</label>
    <input id="classification_name" name="classification_name" type="text" pattern="[A-Za-z0-9]+" required value="<%= classification_name || '' %>">
    <button type="submit">Add Classification</button>
  </form>
</main>



