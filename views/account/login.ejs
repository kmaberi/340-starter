<% if (message) { %>
  <div class="flash-message notice"><%= message %></div>
<% } %>

<div class="login-form">
  <h1>Login</h1>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <form method="post" action="/account/login">
    <fieldset>
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" 
             value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" 
             required placeholder="Enter your email">
      
      <label for="account_password">Password:</label>
      <div class="hint">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character.</div>
      <div class="password-input-container">
        <input type="password" id="account_password" name="account_password" 
               required placeholder="Enter your password"
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="button" class="password-toggle" onclick="togglePassword('account_password')">
          <span class="show-text">👁️</span>
          <span class="hide-text" style="display: none;">🙈</span>
        </button>
      </div>
      
      <button type="submit" class="btn-primary">Login</button>
    </fieldset>
  </form>
  
  <p class="register-link">
    Don't have an account? <a href="/account/register">Register here</a>
  </p>
</div>
