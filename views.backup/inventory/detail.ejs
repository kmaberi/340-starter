
<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigationpartial') %>

<main class="vehicle-detail-main">
  <h1><%= vehicle.inv_make %> <%= vehicle.inv_model %> Details</h1>
  <div class="vehicle-detail-responsive">
    <%- vehicleDetailHTML %>
  </div>
</main>

<%- include('../partials/footer') %>

<style>
.vehicle-detail-main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem;
}
.vehicle-detail-responsive {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
}
.vehicle-detail-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  gap: 2rem;
}
.vehicle-detail-image {
  flex: 1 1 300px;
  min-width: 280px;
  max-width: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.vehicle-detail-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.vehicle-detail-info {
  flex: 2 1 400px;
  min-width: 280px;
}
.vehicle-detail-info h1 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}
.vehicle-detail-info h2 {
  color: #007bff;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}
.vehicle-detail-info ul {
  list-style: none;
  padding: 0;
  margin-bottom: 1rem;
}
.vehicle-detail-info li {
  margin-bottom: 0.5rem;
}
.vehicle-detail-description {
  margin-top: 1rem;
}
@media (max-width: 800px) {
  .vehicle-detail-container {
    flex-direction: column;
    gap: 1rem;
  }
  .vehicle-detail-image, .vehicle-detail-info {
    min-width: 0;
    max-width: 100%;
  }
}
</style>

        <!-- Add Review Button -->
        <% if (locals.accountData) { %>
          <div class="review-actions">
            <a href="/review/add/<%= vehicle.inv_id %>" class="btn btn-primary">Write a Review</a>
          </div>
        <% } else { %>
          <div class="login-prompt">
            <p><a href="/account/login">Login</a> to write a review</p>
          </div>
        <% } %>
      </div>

      <!-- Individual Reviews -->
      <div class="reviews-list">
        <% if (reviews && reviews.length > 0) { %>
          <% reviews.forEach(review => { %>
            <div class="review-item">
              <div class="review-header">
                <div class="reviewer-info">
                  <h4><%= review.review_title %></h4>
                  <div class="reviewer-meta">
                    <span class="reviewer-name">by <%= review.account_firstname %> <%= review.account_lastname %></span>
                    <span class="review-date"><%= new Date(review.review_date).toLocaleDateString() %></span>
                  </div>
                </div>
                <div class="review-rating">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚≠ê</span>
                  <% } %>
                </div>
              </div>
              <div class="review-content">
                <p><%= review.review_text %></p>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-reviews">
            <h3>No Reviews Yet</h3>
            <p>Be the first to review this vehicle!</p>
            <% if (locals.accountData) { %>
              <a href="/review/add/<%= vehicle.inv_id %>" class="btn btn-primary">Write the First Review</a>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
</main>

<style>
