  align-items: start;
  margin-bottom: 15px;
}

.reviewer-info h4 {
  margin: 0 0 5px 0;
  color: #333;
}

.reviewer-meta {
  display: flex;
  gap: 15px;
  font-size: 0.9em;
  color: #666;
}

.reviewer-name {
  font-weight: bold;
}

.review-rating {
  display: flex;
  gap: 2px;
}

.review-content p {
