  padding: 60px 20px;
  background: #f8f9fa;
  border-radius: 8px;
}

.no-reviews h3 {
  color: #666;
  margin-bottom: 15px;
}

.no-reviews p {
  color: #888;
  margin-bottom: 25px;
}

@media (max-width: 768px) {
  .reviews-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .review-summary {
    min-width: auto;
  }
  
  .rating-breakdown {
    min-width: auto;
  }
  
  .review-header {
    flex-direction: column;
    gap: 10px;
  }
  
  .reviewer-meta {
    flex-direction: column;
    gap: 5px;
  }
}
</style>