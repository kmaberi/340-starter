  <main class="container">
    <section class="inventory-showcase">
      <header class="page-header">
        <h1>Vehicle Inventory</h1>
        <p class="header-description">Discover our selection of unique and high-quality vehicles</p>
      </header>

      <form class="search-form" action="/inventory/search" method="GET">
        <div class="search-grid">
          <div class="form-group">
            <label for="make">Make</label>
            <input type="text" id="make" name="make" class="form-input" placeholder="Enter vehicle make">
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" id="model" name="model" class="form-input" placeholder="Enter vehicle model">
          </div>
          <div class="form-group">
            <label for="year">Year</label>
            <input type="number" id="year" name="year" class="form-input" placeholder="Enter year">
          </div>
          <div class="form-group">
            <label for="price">Max Price</label>
            <input type="number" id="price" name="maxPrice" class="form-input" placeholder="Enter maximum price">
          </div>
        </div>
        <button type="submit" class="btn btn-primary search-btn">Search Vehicles</button>
      </form>

      <h2>Browse by Category</h2>
      <div class="category-grid">
        <a href="/inv/type/1" class="category-card">
          <img src="/images/vehicles/adventador-tn.jpg" alt="Custom Vehicles" loading="lazy">
          <span class="vehicle-badge">8 vehicles</span>
          <h3>Custom Vehicles</h3>
        </a>
        <a href="/inv/type/2" class="category-card">
          <img src="/images/vehicles/delorean-tn.jpg" alt="Sports Cars" loading="lazy">
          <span class="vehicle-badge">6 vehicles</span>
          <h3>Sports Cars</h3>
        </a>
        <a href="/inv/type/3" class="category-card">
          <img src="/images/vehicles/escalade-tn.jpg" alt="SUVs" loading="lazy">
          <span class="vehicle-badge">4 vehicles</span>
          <h3>SUVs</h3>
        </a>
        <a href="/inv/type/4" class="category-card">
          <img src="/images/vehicles/model-t-tn.jpg" alt="Classic Cars" loading="lazy">
          <span class="vehicle-badge">5 vehicles</span>
          <h3>Classic Cars</h3>
        </a>
      </div>
    </section>

    <!-- Featured Vehicles -->
    <section class="featured-vehicles">
      <h2>Featured Vehicles</h2>
      <div class="vehicle-grid">
        <% if (locals.featuredVehicles && featuredVehicles.length > 0) { %>
          <% featuredVehicles.forEach(vehicle => { %>
            <div class="vehicle-card">
              <a href="/inv/detail/<%= vehicle.inv_id %>" class="vehicle-link">
                <div class="vehicle-image">
                  <img src="<%= vehicle.inv_thumbnail %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" loading="lazy">
                  <% if (vehicle.inv_miles < 50000) { %>
                    <span class="vehicle-badge">Low Miles</span>
                  <% } %>
                </div>
                <div class="vehicle-info">
                  <h3><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
                  <div class="vehicle-specs">
                    <span class="spec"><i class="spec-icon">üõ£Ô∏è</i> <%= vehicle.inv_miles.toLocaleString() %> miles</span>
                    <span class="spec"><i class="spec-icon">üí∞</i> $<%= vehicle.inv_price.toLocaleString() %></span>
                </div>
                <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="no-vehicles">Loading featured vehicles...</p>
        <% } %>
      </div>
    </section>

    <!-- Search Section -->
    <section class="inventory-search">
      <h2>Find Your Perfect Vehicle</h2>
      <form class="search-form" action="/inv/search" method="GET">
        <div class="search-grid">
          <div class="form-group">
            <label for="make">Make</label>
            <input type="text" id="make" name="make" placeholder="Enter make">
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" id="model" name="model" placeholder="Enter model">
          </div>
          <div class="form-group">
            <label for="year">Year</label>
            <input type="number" id="year" name="year" placeholder="Enter year">
          </div>
          <div class="form-group">
            <label for="price">Max Price</label>
            <input type="number" id="price" name="price" placeholder="Enter maximum price">
          </div>
        </div>
        <button type="submit" class="btn btn-primary search-btn">Search Vehicles</button>
      </form>
    </section>
  </div>
</div>

<%- include('../partials/footer') %>