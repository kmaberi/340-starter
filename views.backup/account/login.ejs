<%- include('../partials/header') -%>

<main class="container">
  <h1>Login</h1>

  <% if (typeof message !== "undefined" && message) { %>
    <div class="message"><%= message %></div>
  <% } %>

  <form method="post" action="/account/login" novalidate>
    <label for="account_email">Email</label>
    <input id="account_email" name="account_email" type="email" required value="<%= (accountData && accountData.account_email) ? accountData.account_email : '' %>">

    <label for="account_password">Password</label>
    <input id="account_password" name="account_password" type="password" required>

    <button type="submit">Login</button>
  </form>

  <p>Don't have an account? <a href="/account/register">Register</a></p>
</main>

<%- include('../partials/footer') -%>